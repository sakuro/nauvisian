#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

bundle install

git submodule update --init

USER_DATA_DIRECTORY=$(bundle exec ruby -rnauvisian/platform -e "puts Nauvisian::Platform.user_data_directory")
[[ -d "$USER_DATA_DIRECTORY" ]] && tar cf - -C "$USER_DATA_DIRECTORY" mods saves | tar xf -
